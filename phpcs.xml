<?xml version="1.0"?>
<ruleset name="CodeIgniter Project - Minimal Rules">
    <description>Validações mínimas para projeto CodeIgniter existente</description>

    <!-- Arquivos a validar -->
    <file>application/controllers</file>
    <file>application/models</file>
    <file>application/libraries</file>

    <!-- Ignorar -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/system/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>
    <exclude-pattern>*/logs/*</exclude-pattern>
    <exclude-pattern>*/config/*</exclude-pattern>
    <exclude-pattern>*/views/*</exclude-pattern>

    <!-- Configurações -->
    <arg name="colors"/>
    <arg value="sp"/>
    <arg name="extensions" value="php"/>

    <!-- ============================================ -->
    <!-- VALIDAÇÃO ATIVA: APENAS FUNÇÕES DE DEBUG     -->
    <!-- ============================================ -->

    <!-- Proibir funções de debug -->
    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array">
                <element key="var_dump" value="null"/>
                <element key="print_r" value="null"/>
                <element key="dd" value="null"/>
                <element key="dump" value="null"/>
            </property>
        </properties>
    </rule>

</ruleset>
